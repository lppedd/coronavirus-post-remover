{
	"manifest_version": 2,
	"name": "Coronavirus Post Remover",
	"short_name": "CPR",
	"description": "A Chrome plugin which removes Coronavirus-related posts from Facebook",
	"version": "0.1",
	"author": "Edoardo Luppi",
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.facebook.com/*"
			],
			"js": [
				"scr.js"
			],
			"run_at": "document_end"
		}
	],
	"page_action": {
		"default_icon": {
			"20": "icons/icon-20.png",
			"38": "icons/icon-38.png",
			"40": "icons/icon-40.png"
		},
		"default_title": "SCR",
		"default_popup": "action/page.html"
	},
	"permissions": [
		"declarativeContent",
		"tabs",
		"storage"
	]
}
